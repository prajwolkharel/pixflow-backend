{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "attach",
        "name": "Debug Docker",
        "port": 9229,
        "address": "localhost",
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/app",
        "skipFiles": ["<node_internals>/**"],
        "restart": true,          // Retry if Nodemon restarts
        "timeout": 30000,         // Wait longer for attachment
        "trace": true             // Log debug connection attempts
      }
    ]
  }